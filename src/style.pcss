:host {
  display: inline-block;
  font-size: 2em;
  --verticalPadding: 1ch;
}

:host([start]):before {
  padding: var(--verticalPadding) 0;
  content: attr(start);
}

:host([end]):after {
  padding: var(--verticalPadding) 0;
  content: attr(end);
}

#redicle {
  --orpPercent: calc(var(--orpOffset, 38) / 100 * 100%);
  position: relative;
  border-top: 4px solid currentColor;
  border-bottom: 4px solid currentColor;
  width: 10em;
  padding: var(--verticalPadding) 0;
  background-repeat: no-repeat;
  background-position: var(--orpPercent) 0;
  background-size: 100%;
  display: inline-flex;
  align-items: center;
  line-height: 1;
}

:host([status="playing"]) #redicle {
  background-image: linear-gradient(to right, rgba(128, 128, 128, .3) 100%, transparent 100%);
	animation: fade calc(var(--msDuration, 240) * 6ms) linear forwards;
}

@keyframes fade {
	to { background-size: 0; }
}

#redicle:before, #redicle:after {
  content: "";
  border: 2px solid currentColor;
  position: absolute;
  height: calc(var(--verticalPadding) / 2);
  left: var(--orpPercent);
}

#redicle:before {
  top: 0;
}

#redicle:after {
  bottom: 0;
}

#word {
  transform: translatex(var(--wordOffset));
  min-height: 2.2ex;
  flex: 1;
}

#word b {
  font-weight: inherit;
  color: var(--spritz-orp-accent, red);
}